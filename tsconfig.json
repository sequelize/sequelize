{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceRoot": "",
    "outDir": "./types",
    "strict": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "checkJs": false,
    "stripInternal": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["./src/**/*.ts"]
}
